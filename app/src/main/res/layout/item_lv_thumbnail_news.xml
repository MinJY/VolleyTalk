<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp">

    <ImageView
        android:id="@+id/iv_thumbnail_news"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title_thumbnail_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_thumbnail_news"
        android:layout_toEndOf="@id/iv_thumbnail_news"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="18sp"
        android:textSize="14sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_description_thumbnail_news"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/iv_thumbnail_news"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#4a4a4a"
        android:ellipsize="end"
        android:maxLines="2"
        android:includeFontPadding="false" />

    <TextView
        android:id="@+id/tv_source_thumbnail_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_thumbnail_news"
        android:layout_toEndOf="@id/iv_thumbnail_news"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:textColor="#ababab"
        android:lineSpacingExtra="6sp"/>

</RelativeLayout>