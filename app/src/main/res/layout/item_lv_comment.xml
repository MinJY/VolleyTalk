<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_user_thumbnail_comment_post"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_user_nickname_comment_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/iv_user_thumbnail_comment_post"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="#4a4a4a"
            android:letterSpacing="-0.01"
            android:gravity="center_vertical"
            android:text="김나나"/>

        <TextView
            android:id="@+id/tv_createdAt_comment_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/tv_user_nickname_comment_post"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="#9b9b9b"
            android:letterSpacing="-0.01"
            android:gravity="center_vertical"
            android:text="2017.07.10"/>

        <ImageView
            android:id="@+id/iv_am_I_like_this_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ico_heart_on"/>

    </RelativeLayout>


   <TextView
       android:id="@+id/tv_contents_comment_post"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"/>

</LinearLayout>