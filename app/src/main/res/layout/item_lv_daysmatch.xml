<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_item_days_match"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_timeInfo_match"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_teamA_score"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="30dp"
        android:layout_toStartOf="@id/tv_timeInfo_match"
        android:textColor="#4a4a4a"
        android:textSize="18sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_teamA_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/tv_teamA_score"
        android:textSize="16sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_teamB_score"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@id/tv_timeInfo_match"
        android:textColor="#4a4a4a"
        android:textSize="18sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_teamB_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/tv_teamB_score"
        android:textSize="16sp"
        android:gravity="center_vertical"/>

</RelativeLayout>