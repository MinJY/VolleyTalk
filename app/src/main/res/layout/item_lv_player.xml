<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lv_player"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_star_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_back_num_player"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="16sp"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/tv_name_player"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="16sp"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/tv_position_player"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="16sp"
            android:textAlignment="textStart"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_num_like_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#093971"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="9999+"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="Like"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_num_post_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#093971"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="1799"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal"
            android:text="Post"/>
    </LinearLayout>

</LinearLayout>